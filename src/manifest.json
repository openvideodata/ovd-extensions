{
	"name": "OpenVideoData.org Uploader",
	"version": "0.0.1",
	"description": "Uploads video metadata to OpenVideoData.org",
	"homepage_url": "https://openvideodata.org",
	"manifest_version": 2,
	"icons": {
		"32": "icons/ovd-32.png",
		"48": "icons/ovd-48.png"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "admin@openvideodata.org"
		}
	},
	"permissions": [
		"*://fake.localhost/*",
		"*://openvideodata.org/*",
		"storage"
	],
	"options_ui": {
		"page": "options/options.html"
	},
	"background": {
		"scripts": [
			"browser-polyfill.min.js",
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"js": ["youtube.js"]
		}
	]
}
